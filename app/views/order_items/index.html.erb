<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Shared order</th>
      <th>Item</th>
      <th>Min quantity</th>
      <th>Max quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= link_to order_item.shared_order.name, order_item.shared_order %></td>
        <td><%= link_to order_item.available_item.name, order_item.available_item %></td>
        <td><%= order_item.min_quantity %></td>
        <td><%= order_item.max_quantity %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Item', new_order_item_path, class: 'btn btn-primary' %>
